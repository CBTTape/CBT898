)ATTR
 _ TYPE(INPUT) INTENS(HIGH) CAPS(ON) HILITE(USCORE)
 @ TYPE(TEXT) INTENS(HIGH) COLOR(YELLOW)
 ? TYPE(OUTPUT) SKIP(ON) INTENS(LOW) CAPS(ON)
 ~ TYPE(OUTPUT) COLOR(GREEN)
 $ TYPE(OUTPUT) COLOR(TURQ)
 ¬ TYPE(TEXT) COLOR(BLUE) HILITE(USCORE)
)BODY EXPAND(\\)
@HELPDRVR tags
%&SID%===>_ZCMD                                            %Scroll ===>_AMT +
+¬Tag                 ¬Start   ¬End   ¬Hide        ¬Links
)MODEL
_Z$#TAG                ~#DESC
+                      ?#TAGS   ?#TAGE ?#TAGH       ?#LINK
)INIT
  .ZVARS='(#SEL)'
  &SID   = &ZSYSID
  &XAMT = TRANS(TRUNC(&AMT,1) H,HALF P,PAGE C,CSR D,DATA *,*)
  IF (&XAMT = HALF,PAGE,CSR,DATA) &AMT = &XAMT
  IF (&SELCTDAT ¬= INPUT)
     &SELCTDAT = OUTPUT
)PROC
  &XAMT = TRANS(TRUNC(&AMT,1) H,HALF P,PAGE C,CSR D,DATA *,*)
  IF (&XAMT = HALF,PAGE,CSR,DATA) &AMT = &XAMT
)END
+?#SEQ    ?#DESC
